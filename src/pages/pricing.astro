---
import { buttonVariants } from "@/components/ui/button";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
const { name, price } = Astro.props;
---

<section
    class="container flex flex-col  md:max-w-[64rem] pb-16   "
  >

    <div
      class="grid w-full items-start gap-10 rounded-3xl overflow-hidden border p-10 md:grid-cols-[1fr_200px] bg-background"
    >
      <div class="grid gap-6">
        <h3 class="text-xl font-bold sm:text-2xl rtl">
          اشتراک {name} شامل چه چیز هایی ست ؟
        </h3>
        <ul class="grid gap-3 text-sm text-muted-foreground sm:grid-cols-2">
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Unlimited Posts
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Unlimited Users
          </li>

          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Custom domain
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Dashboard Analytics
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Access to Discord
          </li>
          <li class="flex items-center">
            <Icon name="lucide:check" class="mr-2 size-4" /> Premium Support
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-4 text-center">
        <div>
          <h4 class="text-3xl rtl pb-4 text-nowrap font-bold">{price}</h4>
          <p class="text-sm font-medium text-muted-foreground">
            پرداخت ماهانه
          </p>
        </div>
        <a href="/login" class={cn(buttonVariants({ size: "lg" }))}>
          سفارش
        </a>
      </div>
    </div>

</section>

